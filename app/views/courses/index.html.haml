%table.table
  %tr
    %th{:scope => "col"} Name
    %th{:scope => "col"} Semesters
    %th{:scope => "col"} Allocation
    %th{:scope => "col"} Start Date
    %th{:scope => "col"} End Date
    %th{:scope => "col"}
  - @courses.each do |course|
    %tr
      %td= course.name
      %td= course.number_of_semesters
      %td= course.allocation
      %td= course.commence
      %td= course.conclude
      %td
        %a.btn.btn-default.btn-xs{ :href => course_path(course), 'aria-label': 'Show' }
          %span.glyphicon.glyphicon-eye-open{ 'aria-hidden': 'true' }
        %a.btn.btn-default.btn-xs{ :href => edit_course_path(course), 'aria-label': 'Edit' }
          %span.glyphicon.glyphicon-edit{ 'aria-hidden': 'true' }
        %a.btn.btn-danger.btn-xs{ :href => course_path(course), 'data-method': 'delete', :rel => 'nofollow' }
          %span.glyphicon.glyphicon-remove{ 'aria-hidden': 'true' }

.d-flex.justify-content-center= will_paginate @courses
