<h1>🧑‍🎓 [<%= @student.id %>] <%= @student.full_name %></h1>

<p>
  <b>Title:</b>
  <%= @student.title %>
</p>

<p>
  <b>First name:</b>
  <%= @student.first_name %>
</p>

<p>
  <b>Middle name:</b>
  <%= @student.middle_name %>
</p>

<p>
  <b>Last name:</b>
  <%= @student.last_name %>
</p>

<p>
  <b>E-Mail:</b>
  <%= @student.email %>
</p>

<p>
  <b>Gender:</b>
  <%= @student.gender %>
</p>

<p>
  <b>Birth date:</b>
  <%= @student.born %>
</p>

<%= link_to 'Edit', edit_student_path(@student), class: "btn btn-default" %>
<%= link_to 'Back', students_path, class: "btn btn-default" %>
<%= link_to 'Delete', student_path(@student), method: :delete, class: "btn btn-default btn-danger" %>
