<h1>🎓 Students</h1>

<table class="table">
  <tr>
    <th scope="col">Full Name</th>
    <th scope="col">Email</th>
    <th scope="col">Gender</th>
    <th scope="col">Birth Date</th>
    <th scope="col"></th>
  </tr>
  <% @students.each do |student| %>
  <tr>
    <td><%= student.full_name %></td>
    <td><%= student.email %></td>
    <td><%= student.gender %></td>
    <td><%= student.born %></td>
    <td>
      <%= link_to 'Show', student_path(student), class: "btn btn-default btn-xs" %>
      <%= link_to 'Edit', edit_student_path(student), class: "btn btn-default btn-xs" %>
      <%= link_to 'Delete', student_path(student), method: :delete, class: "btn btn-danger btn-xs" %>
    </td>
  </tr>
  <% end %>
</table>
<div class="d-flex justify-content-center">
  <%= will_paginate @students %>
</div>
