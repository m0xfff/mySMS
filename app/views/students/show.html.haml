%h1= "🧑‍🎓 [#{@student.id}] #{@student.full_name}"

%p
  %strong Title:
  = @student.title
%p
  %strong First Name:
  = @student.first_name
%p
  %strong Middle Name:
  = @student.middle_name
%p
  %strong Last Name:
  = @student.last_name
%p
  %strong E-Mail:
  = @student.email
%p
  %strong Gender:
  = @student.gender
%p
  %strong Birth Date:
  = @student.born

= link_to 'Edit', edit_student_path(@student), class: "btn btn-default"
= link_to 'Back', students_path, class: "btn btn-default"
= link_to 'Delete', student_path(@student), method: :delete, class: "btn btn-default btn-danger"
